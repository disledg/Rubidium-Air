<Window x:Class="Rubidium.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Rubidium"
        mc:Ignorable="d"
        Title="Вход" Height="250" Width="200">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="Вход в приложение складского учёта" 
                   Grid.Row="0"
                   TextWrapping="Wrap"
                   TextAlignment="Center"
                   FontSize="16"
                   Margin="0,0,0,10"/>

        <!-- Поле логина -->
        <StackPanel Grid.Row="1" Margin="0,0,0,5">
            <TextBlock Text="Логин" FontSize="14" Foreground="Gray"/>
            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" FontSize="16" Height="22"/>
        </StackPanel>

        <!-- Поле пароля -->
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Пароль" FontSize="14" Foreground="Gray"/>
            <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" FontSize="16" Height="22"/>
        </StackPanel>

        <!-- Кнопка входа -->
        <Button Grid.Row="3" 
                Content="Войти" 
                Width="100"
                Height="25"
                HorizontalAlignment="Center"
                CommandParameter="{Binding ElementName=PasswordBox}"
                Command="{Binding AuntificationCommand}"/>
    </Grid>
</Window>
